extends layout

block content

  script.
    // Set active Button
    document.querySelectorAll(".active")[0].classList.remove("active");
    document.querySelectorAll(".nav-link")[2].classList.add("active");

  .row.gx-10
    .col-md-4
      .pb-3
        .card.shadow-lg
          .card-body
            h2.card-title Neue Messung hinzufügen
            div.mt-3
              #EingabeDiv
                |Gerätename 
                i (z.B SUGUCS12)
                |:
                input#NameDiv.form-control.mt-3(type='text' maxLength = "9")
                p
                |OpenSenseBox ID: 
                input#OpenSenseBoxDiv.form-control.mt-3(type='text' maxLength = "24" placeholder= " 638b1a8f11467c001b6b1af3")
                p 
                | Ermittel Deine Browser Koordinaten
                span.Eingabe
                | : 
                p#demo
                a.btn.btn-primary.btn-sm(onclick='getLocation()') mein Standort

      .pb-3
        .card.shadow-lg
          .card-body

            h2.card-title Soundaufnahme
            div
              textarea#db.form-control-lg(name='db' rows="1" style="resize: none; font-size: 18px; padding: 8px; background-color: #f5f5f5; width: 40%; margin: 0 auto; display: block; text-align: center;")
              span.textarea-unit-dB dB
              p
              #Div Gib erst die anderen Daten ein, bevor du eine Soundmessung machst.
              button.btn.btn-primary.btn-sm(id="messung" style="background:green" onclick="mitzaehlen = true; startTime = performance.now();") Messung starten
              meter#volumeMeterEl(high='0.25' max='0.3' value='0')
              p
              button.btn.btn-primary.btn-sm(id="messungStoppen" onclick="mitzaehlen = false;") Messung stoppen
              p#ausg

      .pb-3
        .card.shadow-lg
          .card-body
            a.btn.btn-primary.btn-sm(type='button' id="hinzufuegen") Hinzufügen
            #FehlerDiv Sorry, du musst erst eine Soundmessung machen.
            #FehlerDiv2 Sorry, du musst erst deinen Standort einlesen.
            #FehlerDiv3 Sorry, du musst erst einen Namen eingeben.
    .col-md-8
      .card.shadow-lg
        .card-body
          div.align-items-center
            p#map.mt-3


  script(src='/js/webaudio.js')
  script(src='/js/leaflet.js')