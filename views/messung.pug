extends layout

block content

  script.
    // Set active Button
    document.querySelectorAll(".active")[0].classList.remove("active");
    document.querySelectorAll(".nav-link")[2].classList.add("active");

  .row.gx-10
    .col-md-4
      .pb-3
        .card
          .card-body
            h2.card-title Soundaufnahme
            div
              textarea#db(name='db')
              p
              a.btn.btn-primary.btn-sm(type='button' id="messung") Messung starten!
              p
              a.btn.btn-primary.btn-sm(type='button' id="messungStoppen") Messung stoppen!
              p#ausg
      .pb-3
        .card
          .card-body
            h2.card-title Neue Messung hinzufügen
            div
              #EingabeDiv
                |Name:  
                input#NameDiv(type='text')
              p
              a.btn.btn-primary.btn-sm(type='button' id="hinzufuegen") Hinzufügen
              #FehlerDiv Sorry, du musst erst eine Soundmessung machen.
              #FehlerDiv2 Sorry, du musst erst deinen Standort einlesen.
              #FehlerDiv3 Sorry, du musst erst einen Namen eingeben.
    .col-md-8
      .card
        .card-body
          div
            | Click here to read in your personal 
            span.Eingabe Browser-Coordinates
            | : 
            a.btn.btn-primary.btn-sm(onclick='getLocation()') Try It
          p#demo
          #map.mt-3
      

  script(src='/js/webaudio.js')
  script(src='/js/leaflet.js')